<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.min.js" /></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.js" /></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
            <div class="container">
                <a class="navbar-brand" href="@Url.Action("Index")">徐嘉瑋(ASP.NETcore)</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapsibleNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="collapsibleNavbar">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="#">會員註冊</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">登入</a>
                        </li>
                        <!--下拉清單開始  -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#"
                               id="navbarDarkDropdownMenuLink" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                作業清單
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark"
                                aria-labelledby="navbarDarkDropdownMenuLink">
                                <li><a class="dropdown-item" href="@Url.Action("HTML")">HTML練習</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("CSS")"> CSS練習 </a></li>
                                <li><a class="dropdown-item" href="@Url.Action("bootstrap")"> Bootstrap練習</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Layout")"> 版面配置頁</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("FoodList")">食物清單</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("PeopleList")">會員清單</a></li>
                            </ul>
                        </li>
                        <!--下拉清單結束  -->
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index")">首頁</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top text-muted ">
        <div class="container mt-3">
            &copy; @DateTime.Now.Year - 網站標題 <a href="#"> Hsu Chia Wei</a>
        </div>
    </footer>
</body>
</html>
